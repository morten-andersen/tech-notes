{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2020",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  }
}
